
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/Register.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <div ng-app="RegisterApp" id="mainDiv">
            <form name="userForm" ng-submit="saveUser(userInfo)">
                <div ng-controller="registercrtl">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" name="username" ng-model="userinfo.username" ng-required="true" ng-minlength="5">
                        <span class="error-message" ng-show="userForm.username.$touched && userForm.username.$error.required">Field can't be blank</span>
                        <span class="error-message" ng-show="userForm.username.$touched && userForm.username.$error.minlength">Must longer than 5 character</span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Password" name="password" ng-model="userinfo.password" ng-required="true" ng-minlength="7" ng-pattern="/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{7,}$/">
                        <span class="error-message" ng-show="userForm.password.$touched && userForm.password.$error.required">Field can't be blank</span>
                        <span class="error-message" ng-show="userForm.password.$touched && userForm.password.$error.minlength">Must longer than 5 character</span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Renter Password" name="password2" ng-model="userinfo.password2" ng-required="true" ng-minlength="7" ng-pattern="/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{7,}$/">
                        <span class="error-message" ng-show="userForm.password2.$touched && userForm.password2.$error.required">Field can't be blank</span>
                        <span class="error-message" ng-show="userForm.password2.$touched && userForm.password2.$error.minlength">Must longer than 5 character</span>
                        <span ng-show="isPassMatch">Password does not match!</span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-register" type="submit" ng-disabled="userForm.$invalid">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/RegisterJS.js"></script>
